<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.electrical.controller.LoginController"
           styleClass="auth-background">

    <VBox alignment="CENTER" spacing="20">
        <VBox alignment="CENTER" spacing="6">
            <Label text="⚡" styleClass="app-icon"/>
            <Label text="Electrical Calculator" styleClass="auth-title"/>
            <Label text="Вход в систему" styleClass="auth-subtitle"/>
        </VBox>

        <VBox styleClass="auth-card" spacing="15">
            <padding>
                <Insets top="20" right="24" bottom="20" left="24"/>
            </padding>

            <VBox spacing="10">
                <Label text="Имя пользователя" styleClass="form-label"/>
                <TextField fx:id="usernameField"
                           promptText="Введите имя пользователя"
                           styleClass="input-field"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Пароль" styleClass="form-label"/>
                <PasswordField fx:id="passwordField"
                               promptText="Введите пароль"
                               styleClass="input-field"/>
            </VBox>

            <Label fx:id="errorLabel"
                   styleClass="error-label"
                   wrapText="true"/>

            <Button fx:id="loginButton"
                    text="Войти"
                    onAction="#handleLogin"
                    styleClass="primary-button"
                    maxWidth="Infinity"/>

            <HBox alignment="CENTER" spacing="6">
                <Label text="Нет аккаунта?" styleClass="hint-text"/>
                <Button fx:id="registerButton"
                        text="Зарегистрироваться"
                        onAction="#handleRegister"
                        styleClass="link-button"/>
            </HBox>
        </VBox>
    </VBox>

</StackPane>


