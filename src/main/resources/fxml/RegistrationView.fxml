<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.electrical.controller.RegistrationController"
           styleClass="auth-background">

    <VBox alignment="CENTER" spacing="20">
        <VBox alignment="CENTER" spacing="6">
            <Label text="⚡" styleClass="app-icon"/>
            <Label text="Регистрация" styleClass="auth-title"/>
            <Label text="Создание нового аккаунта" styleClass="auth-subtitle"/>
        </VBox>

        <VBox styleClass="auth-card" spacing="15">
            <padding>
                <Insets top="20" right="24" bottom="20" left="24"/>
            </padding>

            <VBox spacing="10">
                <Label text="Имя пользователя" styleClass="form-label"/>
                <TextField fx:id="usernameField"
                           promptText="Минимум 3 символа"
                           styleClass="input-field"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Пароль" styleClass="form-label"/>
                <PasswordField fx:id="passwordField"
                               promptText="Минимум 6 символов"
                               styleClass="input-field"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Подтверждение пароля" styleClass="form-label"/>
                <PasswordField fx:id="confirmPasswordField"
                               promptText="Повторите пароль"
                               styleClass="input-field"/>
            </VBox>

            <HBox alignment="CENTER_LEFT" spacing="8">
                <CheckBox fx:id="adminCheckBox" text="Создать как администратора"/>
            </HBox>

            <Label fx:id="errorLabel"
                   styleClass="error-label"
                   wrapText="true"/>

            <Label fx:id="successLabel"
                   styleClass="success-label"
                   wrapText="true"/>

            <Button fx:id="registerButton"
                    text="Зарегистрироваться"
                    onAction="#handleRegister"
                    styleClass="primary-button"
                    maxWidth="Infinity"/>

            <Button fx:id="backButton"
                    text="Войти"
                    onAction="#handleBack"
                    styleClass="secondary-button"
                    maxWidth="Infinity"/>

            <HBox alignment="CENTER" spacing="6">
                <Label text="Уже есть аккаунт?" styleClass="hint-text"/>
                <Button text="Вернуться к входу"
                        onAction="#handleBack"
                        styleClass="link-button"/>
            </HBox>
        </VBox>
    </VBox>

</StackPane>


